rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // FUNÇÕES AUXILIARES
    // ============================================
    
    // Verifica se o usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Verifica se o usuário é o dono do documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Verifica se o usuário está criando um documento com seu próprio userId
    function isCreatingOwnData() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Verifica se o usuário é administrador (Custom Claim)
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }
    
    // ============================================
    // COLEÇÃO: users
    // Perfil do usuário (documento ID = uid do Firebase Auth)
    // ============================================
    match /users/{userId} {
      // Admin pode tudo
      allow read, write: if isAdmin();

      // Usuário comum: regras restritas
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }
    
    // ============================================
    // COLEÇÃO: vehicles
    // Veículos do usuário
    // ============================================
    match /vehicles/{vehicleId} {
      // Admin pode tudo
      allow read, write: if isAdmin();

      // Usuário comum
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwnData();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // COLEÇÃO: refueling
    // Registros de abastecimento
    // ============================================
    match /refueling/{refuelingId} {
      // Admin pode tudo
      allow read, write: if isAdmin();

      // Usuário comum
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwnData();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // COLEÇÃO: maintenance
    // Registros de manutenção/checklist
    // ============================================
    match /maintenance/{maintenanceId} {
      // Admin pode tudo
      allow read, write: if isAdmin();

      // Usuário comum
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwnData();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // BLOQUEIA QUALQUER OUTRA COLEÇÃO
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
