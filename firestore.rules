// Firestore Security Rules (sem Custom Claims; usa users/{uid}.role)
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // FUNÇÕES AUXILIARES
    // ============================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isCreatingOwnData() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Admin via documento do Firestore: users/{uid}.role == 'admin'
    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ============================================
    // COLEÇÃO: users (perfil do usuário)
    // ============================================
    match /users/{userId} {
      // Admin pode tudo
      allow read, write: if isAdmin();

      // Usuário comum
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    // ============================================
    // COLEÇÃO: vehicles (veículos)
    // ============================================
    match /vehicles/{vehicleId} {
      // Admin pode tudo
      allow read, write: if isAdmin();

      // Usuário comum (baseado no campo userId do documento)
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwnData();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // ============================================
    // COLEÇÃO: refueling (abastecimentos)
    // ============================================
    match /refueling/{refuelingId} {
      // Admin pode tudo
      allow read, write: if isAdmin();

      // Usuário comum
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwnData();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // ============================================
    // COLEÇÃO: maintenance (manutenções)
    // ============================================
    match /maintenance/{maintenanceId} {
      // TEMPORÁRIO: Para debug - qualquer usuário autenticado pode ler
      allow read: if isAuthenticated();
      
      // Admin pode tudo
      allow read, write: if isAdmin();

      // Usuário comum
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwnData();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Bloqueia qualquer outra coleção por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}